<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="VehicleInfoLabel" parent="@style/SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="VehicleInfoValue" parent="@style/PrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="VehicleInfoSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VehicleInfoDataSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="VehicleInfoDetailSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VehicleInfoIconSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="VehicleInfoIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="VehicleInfoLineVertical">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/divider_vehicle_info</item>
    </style>

    <style name="VehicleInfoLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/divider_vehicle_info</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">@dimen/vehicle_info_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vehicle_info_vertical_margin</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="PrimaryCircleTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_circle</item>
    </style>

    <style name="AboutLabel" parent="@style/SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/about_paragraph_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/about_paragraph_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/about_paragraph_horizontal_margin</item>
    </style>

</resources>
